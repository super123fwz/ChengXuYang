/* pages/home/home.wxss */
.main-view {
  width: 100vw;
  min-height: 100vh;
}

.search-view {
  padding: 10rpx 30rpx 10rpx 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: center;
}

.search-input {
  width: auto;
  border: 2rpx solid #cccc;
  border-radius: 50rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  flex: 1;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.list-con {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list-view {

  box-sizing: border-box;
  padding: 10rpx 20rpx 10rpx 20rpx;
  border-bottom: 2rpx solid #cccc;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 40rpx;
  margin: 0 10rpx;
}

.add_drugs {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
}