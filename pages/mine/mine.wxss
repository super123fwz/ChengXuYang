/* pages/mine/mine.wxss */
.main-view {
  width: 100vw;
  min-height: 100vh;
}

.mine-infor-view {
  width: 100%;
  height: 300rpx;
  background-color: rgb(13, 196, 7);
  color: aliceblue;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.mine-head {
  border: 1rpx;
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  margin: 0 30rpx 0 30rpx;
}

.mine-item-view {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.mine-item {
  display: flex;
  justify-content: space-between;
  margin: 20rpx 30rpx;
  font-size: 35rpx;
  display: flex;
  align-items: center;
}

.mine-icon {
  width: 20rpx;
  height: 30rpx;
}
.push{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgb(245, 58, 58);
  margin-top: 50rpx;
}