/* pages/mine-info/mine-info.wxss */
.main-view {
  width: 100vw;
  min-height: 100vh;
}

.info-view {
  display: flex;
  flex-direction: column;
}

.info-index {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 20rpx 30rpx;
  font-size: 40rpx;
}

.info-index input {
  width: 100%;
}


.bottom-box {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  color: aliceblue;
}

.bt-modify {
  width: 50%;
  height: 100%;
  background-color: rgb(13, 196, 7);
  border: 2rpx solid rgb(221, 218, 218);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.deposit {
  margin-left: 30rpx;
}