/* pages/drugs-info/drugs-info.wxss */
.main-view {
  width: 100vw;
  min-height: 100vh;
}

.info-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 20rpx;
}

.info-index {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.info-title {
  font-weight: bold;
}

.info-con {
  margin: 30rpx 0 0 15rpx;
}

.bottom-box {
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 30rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  color: aliceblue;
}

.bt-modify {
  width: 50%;
  height: 100%;
  background-color: rgb(13, 196, 7);
  border: 2rpx solid rgb(221, 218, 218);
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
}
/* 
