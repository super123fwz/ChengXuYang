.input-view {
  flex-direction: row;
  justify-content: space-between;
}

.stepper-view {
  display: flex;
  flex-direction: row;
}

.stepper {
  width: 50rpx;
  border: 2rpx solid rgb(145, 142, 142);
  margin-left: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.stepper-input {
  padding-left: 25rpx;
}
